<?xml version="1.0" encoding="utf-8"?>
<!--
    Data Extraction Rules for Android 12+ (API 31+)
    
    This file specifies which app data should be included in 
    device-to-device transfers and cloud backups.
    
    For security and privacy, we disable automatic backup.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Disable cloud backup for all app data -->
        <include domain="sharedpref" path="."/>
        <exclude domain="sharedpref" path="."/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Disable device-to-device transfer -->
        <include domain="sharedpref" path="."/>
        <exclude domain="sharedpref" path="."/>
    </device-transfer>
</data-extraction-rules>
